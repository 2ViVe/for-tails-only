<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Alpha Body Challenge</title>
  <%= stylesheet_link_tag "vendor" %>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :modernizr %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
  <!--[if lte IE 8]><script src="/js/warning.js"></script><script>window.onload=function(){e("/images/ie/")}</script><![endif]-->
</head>
<body class='zoivi'>
<!-- header start -->
<%= render "application/header" %>
<!-- header end -->

<!-- content start -->
<div class="container <%= @wrapper_css * " " if @wrapper_css %>">
  <% if current_user && include_sidebar %>
      <%= render "application/sidebar" %>
  <% end %>
  <%= yield %>
</div>

<%= javascript_include_tag "vendor" %>
<%= javascript_include_tag "application" %>
<%= yield :footer_js %>

</body>
</html>


